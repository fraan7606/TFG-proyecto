generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String?       @unique
  phone        String?       @unique
  passwordHash String        @map("password_hash")
  authMethod   AuthMethod    @map("auth_method")
  role         Role          @default(CLIENT)
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  appointments Appointment[]
  reviews      Review[]

  @@map("users")
}

model Service {
  id              String           @id @default(uuid())
  name            String
  description     String?
  durationMinutes Int              @map("duration_minutes")
  price           Decimal          @db.Decimal(10, 2)
  active          Boolean          @default(true)
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  appointments    Appointment[]
  reviews         Review[]
  serviceProducts ServiceProduct[]

  @@map("services")
}

model Appointment {
  id           String            @id @default(uuid())
  userId       String            @map("user_id")
  serviceId    String            @map("service_id")
  specialistId String?           @map("specialist_id")
  scheduledAt  DateTime          @map("scheduled_at")
  status       AppointmentStatus @default(PENDING)
  notes        String?
  createdAt    DateTime          @default(now()) @map("created_at")
  updatedAt    DateTime          @updatedAt @map("updated_at")
  service      Service           @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user         User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  specialist   Specialist?       @relation(fields: [specialistId], references: [id], onDelete: SetNull)
  review       Review?

  @@map("appointments")
}

model Specialist {
  id           String        @id @default(uuid())
  name         String
  role         String?
  imageUrl     String?       @map("image_url")
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now()) @map("created_at")
  updatedAt    DateTime      @updatedAt @map("updated_at")
  appointments Appointment[]

  @@map("specialists")
}

model Review {
  id            String      @id @default(uuid())
  userId        String      @map("user_id")
  serviceId     String      @map("service_id")
  appointmentId String      @unique @map("appointment_id")
  rating        Int
  comment       String?
  createdAt     DateTime    @default(now()) @map("created_at")
  appointment   Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  service       Service     @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("reviews")
}

model Product {
  id              String           @id @default(uuid())
  name            String
  description     String?
  stockQuantity   Int              @map("stock_quantity")
  price           Decimal          @db.Decimal(10, 2)
  minStockAlert   Int              @default(5) @map("min_stock_alert")
  createdAt       DateTime         @default(now()) @map("created_at")
  updatedAt       DateTime         @updatedAt @map("updated_at")
  serviceProducts ServiceProduct[]

  @@map("products")
}

model ServiceProduct {
  serviceId    String  @map("service_id")
  productId    String  @map("product_id")
  quantityUsed Int     @map("quantity_used")
  product      Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  service      Service @relation(fields: [serviceId], references: [id], onDelete: Cascade)

  @@id([serviceId, productId])
  @@map("service_products")
}

enum Role {
  CLIENT
  ADMIN
}

enum AuthMethod {
  EMAIL
  PHONE
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  COMPLETED
  CANCELLED
  RESCHEDULED
}
